# The structure is : 
# # Remark 
# "command" 
# m:xxx + c:xxx 
# Shift+... 




keystate_numlock = enable
keystate_scrolllock = enable
keystate_capslock = enable



#horizontal
"sleep 0.2 ; xdotool key --delay 15 Super_R+h"
    m:0x0 + c:87
    KP_End 

#move down
"sleep 0.2 ; xdotool key --delay 15 Super_R+Shift+Down"
    m:0x0 + c:88
    KP_Down 

#vertical
"sleep 0.2 ; xdotool key --delay 15 Super_R+v"
    m:0x0 + c:89
    KP_Next 

#move left
"sleep 0.2 ; xdotool key --delay 15 Super_R+Shift+Left"
    m:0x0 + c:83
    KP_Left 

#float
"sleep 0.2 ; xdotool key --delay 15 Super_R+Shift+space"
    m:0x0 + c:84
    KP_Begin 

#move right
"sleep 0.2 ; xdotool key --delay 15 Super_R+Shift+Right"
    m:0x0 + c:85
    KP_Right 

#resize
"sleep 0.2 ; xdotool key --delay 15 Super_R+r"
    m:0x0 + c:79
    KP_Home 

#move up
"sleep 0.2 ; xdotool key --delay 15 Super_R+Shift+Up"
    m:0x0 + c:80
    KP_Up 

#rofi
"sleep 0.2 ; xdotool key --delay 15 Super_R+d"
    m:0x0 + c:81
    KP_Prior 

#Sleep
"i3exit suspend"
    m:0x0 + c:106
    KP_Divide 

#Lock
"/home/joo/.i3/lock.sh"
    m:0x0 + c:63
    KP_Multiply 

#
# End of xbindkeys configuration
